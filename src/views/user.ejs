<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&family=Viga&display=swap"
      rel="stylesheet"
    />
 
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css"
    />

    <style>
      body {
        font-family: "Poppins", sans-serif;
      }
    </style>

    <title><%= user.title %></title>
  </head>
  <body>
    <!-- Nav Section Start -->

    <nav class="navbar navbar-expand-lg bg-primary">
      <div class="container">
        <a class="navbar-brand text-white fs-3" href="/">BOXROAM</a>
        <button
          class="navbar-toggler text-white"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link text-white active" aria-current="page" href="/"
                >Home</a
              >
            </li>

            <li class="nav-item">
              <a class="nav-link text-white" href="/bus/getBus">Bus</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/transaction/getTrans">Transaction</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/user/getUser">User</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/operator/getOperator">Operator</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Nav Section End -->

    <!-- Contents Section Start -->

    <div class="container mt-5">
      <div class="row">
        <div class="col-md-8 pe-5">
          <h1><%= user.subtitle %></h1>

          <!-- Tables Start -->

          <table class="table mt-3">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Gender</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <% if (user.list.length === 0) { %>
            <tr>
              <td colspan="5">
                <div class="alert alert-info mt-2 fw-semibold" role="alert">
                  Daftar user tidak tersedia!
                </div>
              </td>
            </tr>
            <% } %> <% for( let i = 0; i < user.list.length; i++ ) { %>
            <tbody>
              <tr>
                <th><%= i+1 %></th>
                <td><%= user.list[i].name %></td>
                <td><%= user.list[i].email %></td>
                <td><%= user.list[i].gender %></td>
                <td><%= user.list[i].phone %></td>
                <td><%= user.list[i].address %></td>
                <form action="/user/deleteUserById" method="post">
                  <td>
                    <a
                      href="/user/getUserById/<%= user.list[i].id %>"
                      class="btn btn-success badge rounded-pill"
                      ><i class="bi bi-info-circle"></i> DETAIL</a
                    >
                    <input
                      type="text"
                      name="id"
                      hidden
                      value="<%= user.list[i].id %>"
                    />
                    <button
                      type="submit"
                      onclick="return confirm(`Apakah anda ingin menghapus Data <%= user.list[i].name %>`)"
                      class="btn btn-danger badge rounded-pill"
                    >
                      <i class="bi bi-x-circle"></i> DELETE
                    </button>
                  </td>
                </form>
              </tr>
            </tbody>
            <% } %>
          </table>

          <!-- Tables End -->
        </div>
        <div class="col-md-4">
          <!-- Forms Start -->
          <h1 class="mt-3">TAMBAH DATA User</h1>
          <form action="/user/addUser" class="mt-3" method="post">
            <div class="mb-3">
              <label for="name" class="form-label fw-bold">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="Email"
                required
                name="name"
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label fw-bold">Email</label>
              <input
                type="text"
                class="form-control"
                id="email"
                placeholder="Email"
                required
                name="email"
              />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label fw-bold">Password</label>
              <input
                type="password"
                class="form-control"
                id="password"
                placeholder="Input Password"
                required
                name="password"
              />
            </div>
            <div class="mb-3">
              <label for="gender" class="form-label fw-bold">Gender</label>
              <input
                type="number"
                class="form-control"
                id="gender"
                placeholder="Input Gender"
                required
                name="gender"
              />
              <div class="mb-3">
                <label for="phone" class="form-label fw-bold">Phone</label>
                <input
                  type="text"
                  class="form-control"
                  id="phone"
                  placeholder="Input Phone"
                  required
                  name="phone"
                />
              </div>
              <div class="mb-3">
                <label for="address" class="form-label fw-bold">Address</label>
                <input
                  type="text"
                  class="form-control"
                  id="address"
                  placeholder="Input Address"
                  required
                  name="address"
                />
              </div>
            </div>
            <button
              type="submit"
              onclick="return confirm('Apakah anda ingin menambahkan Data ini ?')"
              class="btn btn-primary"
            >
              TAMBAHKAN DATA
            </button>
          </form>

          <!-- Froms End -->
        </div>
      </div>
    </div>

    <!-- Contents Section End -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
      crossorigin="anonymous"
    ></script>
  </body>
</html>